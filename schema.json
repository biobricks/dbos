{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "dbos": {
      "type": "string",
      "const": "1.0.0-pre1"
    },
    "name": {
      "type": "string",
      "maxLength": 256,
      "examples": [
        "John Scientist",
        "Jane Scientist"
      ]
    },
    "affiliation": {
      "type": "string",
      "maxLength": 256,
      "examples": [
        "Leland Stanford Junior University",
        "General Electric Co."
      ]
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 28000
    },
    "safety": {
      "type": "string",
      "maxLength": 28000
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "format": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          },
          "digest": {
            "$ref": "#/definitions/digest"
          }
        },
        "additionalProperties": false,
        "required": [
          "format",
          "digest"
        ]
      },
      "uniqueItems": true
    },
    "journals": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 256
      },
      "uniqueItems": true
    },
    "classifications": {
      "type": "array",
      "items": {
        "description": "International Patent Classification",
        "type": "string",
        "pattern": "[ABCDEFGH][0-9][0-9][A-Z] [0-9]{1,3}/[0-9]{2,}"
      },
      "uniqueItems": true
    },
    "publications": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/digest"
      },
      "uniqueItems": true
    },
    "commitment": {
      "$ref": "#/definitions/version"
    },
    "license": {
      "$ref": "#/definitions/version"
    }
  },
  "required": [
    "dbos",
    "title",
    "description",
    "safety",
    "license",
    "commitment"
  ],
  "additionalProperties": false,
  "definitions": {
    "digest": {
      "type": "string",
      "pattern": "^[abcdef0-9]{64}$",
      "description": "hex-encoded SHA256 digest",
      "examples": [
        "cf23943371264f7ffa7590f5a8758f61fbe35ce834e5ee1f826cf16ea34fc8a4"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "version triple",
      "examples": [
        "0.0.0",
        "1.0.0"
      ]
    }
  }
}
